{
    "tasks": {
      "test": "deno test --allow-all --coverage=coverage",
      "test:dev": "deno test --allow-all --watch",
      "test:ci": "deno test --allow-all  --coverage=coverage",
      "lint": "deno lint",
      "fmt": "deno fmt"
    },
    "lint": {
      "rules": {
        "tags": ["recommended"]
      }
